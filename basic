import pygame
import time
import random

WIDTH, HEIGHT = 1000, 800

WIN = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Space Game")

def main():

    Flag = True
    while Flag:
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                Flag = False
                break

if __name__ == "__main__":
    main()
